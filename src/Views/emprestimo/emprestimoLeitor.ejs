<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <title>Meus Empréstimos</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100..900&display=swap");
      body {
        font-family: "Lexend Deca", sans-serif;
        background-color: #f8f9fa;
      }
      .table-section {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
      }
    </style>
  </head>
  <body>
    <%- include("../partials/header") %> <%- include('../partials/navbar') %>

    <div class="container mt-5">
      <div class="table-section">
        <h4 class="mb-4 text-primary">Minhas Solicitações</h4>
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Livro</th>
              <th>Usuário</th>
            </tr>
          </thead>
          <tbody>
            <% if (solicitacoes && solicitacoes.resultados &&
            solicitacoes.resultados.length > 0) { %> <% for (let r=0; r <
            solicitacoes.resultados.length; r++) { %>
            <tr>
              <td><%= solicitacoes.resultados[r].titulo %></td>
              <td><%= solicitacoes.resultados[r].username %></td>
            </tr>
            <% } %> <% } else { %>
            <tr>
              <td colspan="2" class="text-center">
                Nenhuma solicitação encontrada.
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <div class="table-section">
        <h4 class="mb-4 text-success">Livros com Você</h4>
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Título</th>
              <th>Data Inicial</th>
              <th>Data Final</th>
            </tr>
          </thead>
          <tbody>
            <% if (emprestimos && emprestimos.length > 0) { %> <% for (let i=0;
            i < emprestimos.length; i++) { %>
            <tr>
              <td><%= emprestimos[i].tituloLivro %></td>
              <td><%= emprestimos[i].datainicial %></td>
              <td><%= emprestimos[i].datafinal %></td>
            </tr>
            <% } %> <% } else { %>
            <tr>
              <td colspan="3" class="text-center">
                Você não tem empréstimos ativos.
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <%- include('../partials/footer') %>
  </body>
</html>
