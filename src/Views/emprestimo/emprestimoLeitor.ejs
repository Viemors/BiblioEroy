<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../public/css/tabela.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Dados do livro</title>
    <style>
    @import url('https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100..900&display=swap');
  </style>
</head>

<body>

    <%-include("../partials/header")%>
    <%-include('../partials/navbar') %>
<div class="container mt-4">
                <h4 class="mb-3">
                    Tabela: <%= solicitacoes.colunas[0].table %>
                </h4>

                <table class="table table-hover table-striped table-bordered">
                    <thead class="table-white">
                        <tr>
                            <% for (let c=0; c < solicitacoes.colunas.length; c++) { %>
                                <th>
                                    <%= solicitacoes.colunas[c].name %>
                                </th>
                                <% } %>
                        </tr>
                    </thead>

                    <tbody>
                        <% for (let r=0; r < solicitacoes.resultados.length; r++) { %>
                            <tr>
                                <% for (let t=0; t < solicitacoes.colunas.length; t++) { %>
                                    <td>
                                        <%= solicitacoes.resultados[r][solicitacoes.colunas[t].name] %>
                                    </td>
                                    <% } %>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
               </div>


                <div class="container mt-4">
                <h4 class="mb-3">
                    Tabela: <%= emprestimos.colunas[0].table %>
                </h4>

                <table class="table table-hover table-striped table-bordered">
                    <thead class="table-white">
                        <tr>
                            <% for (let c=0; c < emprestimos.colunas.length; c++) { %>
                                <th>
                                    <%= emprestimos.colunas[c].name %>
                                </th>
                                <% } %>
                        </tr>
                    </thead>

                    <tbody>
                        <% for (let r=0; r < emprestimos.resultados.length; r++) { %>
                            <tr>
                                <% for (let t=0; t < emprestimos.colunas.length; t++) { %>
                                    <td>
                                        <%= emprestimos.resultados[r][emprestimos.colunas[t].name] %>
                                    </td>
                                    <% } %>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        <%-include('../partials/footer') %>

</body>

</html>