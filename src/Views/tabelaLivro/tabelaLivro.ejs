<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../public/css/tabela.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script defer src="../js/tabela.js"></script>
    <title>Dados do livro</title>
    <link rel="icon" type="image/png" sizes="32x32" href="../img/favicon-32.png">
    <style>
    @import url('https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100..900&display=swap');
  </style>
</head>

<body>

    <%-include("../partials/header")%>

        <div class="container mt-4">
            <main>
            <% for (let i=0; i < result.length; i++) { %>

                <h4 class="mb-3">
                    Tabela: <%= result[i].colunas[0].table %>
                </h4>

                <table class="table table-hover table-striped table-bordered">
                    <thead class="table-white">
                        <tr>
                            <% for (let c=0; c < result[i].colunas.length; c++) { %>
                                <th>
                                    <%= result[i].colunas[c].name %>
                                </th>
                                <% } %>
                        </tr>
                    </thead>

                    <tbody>
                        <% for (let r=0; r < result[i].resultados.length; r++) { %>
                            <tr>
                                <% for (let t=0; t < result[i].colunas.length; t++) { %>
                                    <td>
                                        <%= result[i].resultados[r][result[i].colunas[t].name] %>
                                    </td>
                                    <% } %>
                            </tr>
                            <% } %>
                    </tbody>
                </table>

                <% } %>

        </div>
</main>
        <%-include('../partials/footer') %>

</body>

</html>