<!doctype html>
<html lang="pt-BR">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Livros</title>
  <link rel="icon" type="image/png" sizes="32x32" href="../img/favicon-32.png">
  <link rel="stylesheet" href="../css/perfis.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
  <script defer src="../js/per.js"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100..900&display=swap');
  </style>
</head>

<body>

  <%- include('../partials/header') %>
    <%- include("../partials/navbar") %>

      <main>
        <section class="text-center py-5">
          <div>
            <h1>Explore a nossa Biblioteca!</h1>
            <p>Algo curto e cativante... role para saber mais.</p>
          </div>
        </section>

        <% if (error && error.length) { %>
          <div class="flash flash-error text-center text-danger">
            <% error.forEach(msg=> { %>
              <p>
                <%= msg %>
              </p>
              <% }) %>
          </div>
          <% } %>

            <% if (success && success.length) { %>
              <div class="flash flash-success text-center text-success">
                <% success.forEach(msg=> { %>
                  <p>
                    <%= msg %>
                  </p>
                  <% }) %>
              </div>
              <% } %>

                <!-- Grid de cards -->
                <div class="album py-5 bg-light">
                  <div class="container">
                    <div class="row">
                      <% for (let i=0; i < Object.keys(todosLivros).length; i++) { %>
                        <div class="col-md-4 mb-4">
                          <form action="/solicitar" method="POST">
                            <div class="card h-100">
                              <img src="<%=todosLivros[i].imagem%>" class="img-fluid"
                                height="225" alt="<%=todosLivros[i].titulo%>">

                              <input type="hidden" name="titulo" value="<%=todosLivros[i].titulo%>">

                              <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                  <%=todosLivros[i].titulo%>
                                </h5>
                                <p class="card-text">
                                  <%=todosLivros[i].descricao%>
                                </p>
                                <div class="mt-auto d-flex justify-content-between">
                                  <button type="submit" class="btn btn-outline-danger btn-curtir">
                                    <i class="bi bi-heart-fill" style="padding-right:5px;"></i>Solicitar Empr√©stimo
                                  </button>
                                </div>
                              </div>
                            </div>
                          </form>
                        </div>
                        <% } %>
                    </div>
                  </div>
                </div>
              
                
      </main>

      <%- include('../partials/footer') %>

</body>

</html>