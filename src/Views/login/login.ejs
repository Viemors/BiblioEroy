<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="icon" type="image/png" sizes="32x32" href="../img/favicon-32.png">
  <link rel="stylesheet" href="../css/cadastro-login.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
  <script defer src="../js/forms.js"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100..900&display=swap');

    body,
    html {
      height: 100%;
      background: #f2f4f7;
      font-family: 'Lexend Deca', sans-serif;
      position: relative;
    }

  </style>
  <link rel="icon" type="image/png" sizes="32x32" href="../img/favicon-32.png">
  <title>Login</title>
</head>

<body>

  <div class="container">
    <div class="row">
      <div class="col-12">
        <a href="/" class="btn btn-secondary mt-3" id="button">
          <i class="bi bi-arrow-left"></i> Voltar
        </a>
      </div>
    </div>
  </div>

  <div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
      <div class="col-12 col-sm-8 col-md-6 col-lg-4">
        <div class="card shadow p-4" style="border-radius:15px;">

          <% if (error && error.length) { %>
            <div class="alert alert-danger text-center mb-3">
              <% error.forEach(msg => { %>
                <p><%= msg %></p>
              <% }) %>
            </div>
          <% } %>

          <% if (success && success.length) { %>
            <div class="alert alert-success text-center mb-3">
              <% success.forEach(msg => { %>
                <p><%= msg %></p>
              <% }) %>
            </div>
          <% } %>

          <h2 class="text-center mb-4">Login</h2>

          <form action="/login" method="POST">
            <div class="mb-3">
              <label for="username" class="form-label">Nome de Usuário</label>
              <input type="text" id="username" name="username" class="form-control text-center"
                placeholder="Digite seu nome de usuário">
            </div>

            <div class="mb-3">
              <label for="senha" class="form-label">Senha</label>
              <input type="password" id="senha" name="senha" class="form-control text-center"
                placeholder="Digite sua senha" required minlength="6">
            </div>

            <div class="form-check mb-3">
              <input type="checkbox" id="termos" name="termos" class="form-check-input" required>
              <label for="termos" class="form-check-label">Concordo com os termos e condições.</label>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3" id="button">Entrar</button>

            <a href="/cadastro" class="btn btn-outline-primary w-100" id="button">Não tenho uma conta</a>
          </form>

        </div>
      </div>
    </div>
  </div>

</body>

</html>
